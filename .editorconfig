root = true

[*]
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
end_of_line = lf

[*.java]
indent_style = space
indent_size = 4
curly_bracket_next_line = false
spaces_around_operators = true
continuation_indent_size = 8
indent_brace_style = Java

[*.xml]
indent_style = space
indent_size = 2

[.travis.yml]
indent_style = space
indent_size = 2
